        <div class="content-wrapper">
            <!-- Content Header (Page header) -->
            <section class="content-header">
                <h1>
                    Thông tin tất cả các sản phẩm chưa được kiểm định
                </h1>
                <table style="with:100%;">
                        <thead>
                          <th style="padding:0 40px;">ID sản phẩm</th>
                          <th style="padding:0 40px;">Tên sản phẩm</th>
                          <th style="padding:0 40px;">Hình ảnh</th>
                          <th style="padding:0 40px;">Kiểm định</th>
                          <th style="padding:0 40px;">Hành động</th>
                        </thead>
                        <tbody>
                        <% products.forEach(function(product) { %>
                          <tr>
                            <td style="padding:2px 40px;">
                              <a href="/get-product/<%= product.fish_id %>"> <%= product.fish_id %></a>
                            </td>
                            <td style="padding:2px 40px;">
                                <%= product.name %>
                            </td>
                            <td style="padding:2px 40px;">
                                <img src="<%= product.image_package %>" height="50" width="50">
                            </td>
                            <td style="padding:2px 40px;">
                              <% if (product.certifications == null) { %>
                                  No
                              <% } else { %>
                                  Yes
                              <% } %>
                            </td>
                            <td style="padding:2px 40px;">
                              <a href="/update-certificate/<%= product.fish_id %>">Cập nhật kiểm định</a>
                            </td>
                        </tr>
                        <% }); %>
                        </tbody>
                      </table>
            </section>

